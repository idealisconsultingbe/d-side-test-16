<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sale_order_form_quote_dsi" model="ir.ui.view">
        <field name="name">sale.order.form.dsi</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <button class="btn btn-primary" name="action_choose_section" type="object"
                        groups="sale_management.group_sale_order_template" colspan="2">
                    Choose a Template
                </button>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="before">
                <field name="total_production_fee" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="total_section" invisible="1"/>
                <field name="section_amount_report" nolabel="1" attrs="{'invisible': [('display_type', '!=', 'line_section')]}" widget="section_total"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="dsi_is_agency_fee_section" attrs="{'invisible': [('display_type', '!=', 'line_section')]}" widget="section_boolean"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="after">
                <field name="dsi_supplier_id"/>
                <field name="dsi_expense_budget"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//label[@for='name'][last()]" position="after">
                <label for="name" string="Sub section Name" attrs="{'invisible': [('display_type', '!=', 'line_sub_section')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//create[@name='add_section_control']" position="after">
                <create name="add_sub_section_control" string="Add a sub section" context="{'default_display_type': 'line_sub_section'}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban//t[@t-out='record.name.value']/../../.." position="attributes">
                <attribute name="t-if">record.display_type.raw_value === 'line_section' || record.display_type.raw_value === 'line_sub_section' || record.display_type.raw_value === 'line_note'</attribute>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="before">
                <field name="dsi_expense_budget" colspan="2"/>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="after">
                <field name="dsi_gross_margin" colspan="2"/>
            </xpath>
        </field>
    </record>

</odoo>
