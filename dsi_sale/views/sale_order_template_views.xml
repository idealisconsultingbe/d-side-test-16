<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="sale_order_template_view_form_dsi" model="ir.ui.view">
        <field name="name">sale.order.template.form.dsi</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="dsi_is_agency_fee_section" attrs="{'invisible': [('display_type', '!=', 'line_section')]}" widget="section_boolean"/>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_line_ids']/tree/field[@name='product_uom_qty']" position="after">
                <field name="dsi_supplier_id"/>
                <field name="dsi_expense_budget"/>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_line_ids']/tree/control/create[@name='add_section_control']" position="after">
                <create name="add_sub_section_control" string="Add a sub section" context="{'default_display_type': 'line_sub_section'}"/>
            </xpath>
        </field>
    </record>

</odoo>
