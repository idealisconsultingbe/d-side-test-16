<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_crm_case_leads_filter" model="ir.ui.view">
        <field name="name">crm.lead.search.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter name="group_top_parent" string="Top Company" context="{'group_by': 'dsi_partner_top_parent'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_crm_case_opportunities_filter" model="ir.ui.view">
        <field name="name">crm.lead.search.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group//filter[@name='company']" position="after">
                <filter name="group_top_parent" string="Top Company" context="{'group_by': 'dsi_partner_top_parent'}"/>
            </xpath>
        </field>
    </record>

</odoo>
